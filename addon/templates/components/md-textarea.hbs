{{#if icon}}
  {{bw-compat-icon icon extraClasses="prefix"}}
{{/if}}

{{textarea classNameBindings="validate:validate: isValid:valid: isInvalid:invalid:"
  id=id
  value=value
  name=name
  required=required
  readonly=readonly
  disabled=disabled
  maxlength=maxlength
  class="materialize-textarea"}}
<label for="{{id}}" data-error={{_errorString}}>{{label}}</label>
